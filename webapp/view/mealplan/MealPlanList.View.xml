<mvc:View xmlns="sap.m" xmlns:mvc="sap.ui.core.mvc"
controllerName="sap.ui.demo.nav.controller.meal.MealList">
      <Page title="{i18n>Title.Mealplans}" floatingFooter="true" enableScrolling="false" showNavButton="true" navButtonPress="onNavBack">
        <Table items="{/mealPlans}" width="auto" class="sapUxAPObjectPageSubSectionAlignContent">
          <headerToolbar>
            <Toolbar>
              <ToolbarSpacer></ToolbarSpacer>
              <Button icon="sap-icon://add" press="handleAddMeal" text="Add meal"></Button>
            </Toolbar>
          </headerToolbar>
          <columns>
            <Column>
              <Text text="Id" />
            </Column>
            <Column>
              <Text text="{i18n>Date}" />
            </Column>
          </columns>
          <items>
            <ColumnListItem>
              <cells>
                <ObjectIdentifier title="{id}"/>
                <Text text="{date}" />
                <HBox justifyContent="End">
                  <Button icon="sap-icon://edit" press="handleEditMealPlan"></Button>
                  <Button icon="sap-icon://delete" press="handleDeleteMealPlan"></Button>
                </HBox>
              </cells>
            </ColumnListItem>
          </items>
        </Table>
      </Page>
</mvc:View>
  